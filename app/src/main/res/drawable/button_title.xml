<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="1dip" android:color="#FFBA79" />
            <gradient android:angle="-90" android:startColor="#FFBA79" android:endColor="#FFBA79"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="1dip" android:color="#FFBA79" />
            <solid android:color="#FFBA79"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="400dip" />
            <stroke android:width="1dip" android:color="#FFBA79" />
            <gradient android:angle="-90" android:startColor="#FFBA79" android:endColor="#FFBA79" />
        </shape>
    </item>
</selector>
